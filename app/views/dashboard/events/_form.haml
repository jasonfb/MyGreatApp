.row
  .form-group.col-md-4
    = f.collection_select(:user_id, User.all, :id, :name, {:prompt => true}, class: 'form-control')
    %label.small.form-text.text-muted
      User
.row
  .form-group.col-md-4
    = f.text_field :name, size: 40, class: 'form-control'
    %label.form-text
      Name

.row
  .form-group.col-md-4
    = f.text_field :start_at, class: 'form-control', type: 'datetime-local'
    %label.form-text
      Start at

.row
  .form-group.col-md-4
    = f.text_field :end_at, class: 'form-control', type: 'datetime-local'
    %label.form-text
      End at


.row
  .form-group.col-md-4
    = f.text_field :description, size: 40, class: 'form-control'
    %label.form-text
      Description
